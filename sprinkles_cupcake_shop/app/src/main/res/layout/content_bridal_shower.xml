<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sprinkles_cupcake_shop.BridalShowerActivity"
    tools:showIn="@layout/activity_bridal_shower">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back3"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="312dp"
            android:layout_height="108dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Bridal Shower Cupcakes"
            android:textColor="@color/material_dynamic_primary40"
            android:textSize="34sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:id="@+id/imagebBridal1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/bridal2" />

        <ImageButton
            android:id="@+id/imagebBridal2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/bridal3" />

        <ImageButton
            android:id="@+id/imagebBridal3"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/bridal4" />

        <ImageButton
            android:id="@+id/imagebBridal4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/bridal5" />


        <EditText
            android:id="@+id/txtBrdalShower"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/imagebBridal4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnBridalShowerGo" />

        <Button
            android:id="@+id/btnBridalShowerGo"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Go to place the Order"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/txtBrdalShower"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnBridalShowerBack"
            android:backgroundTint="@android:color/holo_blue_light"/>

        <Button
            android:id="@+id/btnBridalShowerBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Back"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toBottomOf="@+id/btnBridalShowerGo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@android:color/holo_blue_light"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
