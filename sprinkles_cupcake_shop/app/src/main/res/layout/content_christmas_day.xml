<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sprinkles_cupcake_shop.ChristmasDayActivity"
    tools:showIn="@layout/activity_christmas_day">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back3"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="312dp"
            android:layout_height="108dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Christmas Cupcakes"
            android:textColor="@color/material_dynamic_primary40"
            android:textSize="34sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:id="@+id/imagebChristmas1"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/christmas1" />

        <ImageButton
            android:id="@+id/imagebChristmas2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/christmas2" />

        <ImageButton
            android:id="@+id/imagebChristmas3"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/christmas3" />

        <ImageButton
            android:id="@+id/imagebChristmas4"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/christmas4" />

        <EditText
            android:id="@+id/txtChristmasDay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnChristmasDayGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Go to place the Order"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_blue_light"/>

        <Button
            android:id="@+id/btnChristmasBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Back"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_blue_light"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>